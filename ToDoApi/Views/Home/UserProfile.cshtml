@model UserModel
@{
    ViewBag.Title = "My profile";
}

<h2>My profile</h2>

<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<form method="post" asp-action="">
    <div class="form-group row">
        <div class="col-sm-2"><label>Username:</label></div>
        <div class="col-sm-4">
            <input type="text" asp-for="@Model.UserName"
                   class="form-control" />
        </div>
        <div class="col">
            <span asp-validation-for="@Model.UserName"
                  class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="offset-2 col-sm-4">
            <button type="submit" class="btn btn-primary">Update</button>
            <a asp-action="ShowTasks" class="btn btn-primary">Cancel</a>
        </div>
    </div>
</form>